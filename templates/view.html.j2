{% extends "base.html.j2" %}
{% block content %}
<div class="row">
  <div class="col-12 col-lg-9">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs d-none d-sm-flex" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="graph-tab" data-toggle="tab" href="#graph" role="tab" aria-controls="graph" aria-selected="true">Graph</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="list-tab" data-toggle="tab" href="#list" role="tab" aria-controls="list" aria-selected="false">List</a>
      </li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content h-100" id="myTabContent">
      <div class="tab-pane tab-height active tab-mobile" id="graph" role="tabpanel" aria-labelledby="graph-tab">
        {% include 'graph.html.j2' %}
      </div>
      <div class="tab-pane tab-height overflow-auto" id="list" role="tabpanel" aria-labelledby="list-tab">
        {% include "list.html.j2" %}  
      </div>
    </div>
  </div>
  <div class="col-12 col-lg-3">
    {% include 'side.html.j2' %}
  </div>
</div>
<div class="row d-block d-sm-none">
  <div class="col">
    <nav class="navbar navbar-light bg-light fixed-bottom" style="margin-bottom: 0">
      <div class="navbar-expand">
        <ul id="bottom-nav" class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="#graph">Graph</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#list">List</a>
          </li>
        </ul>
      </div>
    </nav> 
  </div>
</div>
<script>
$('#bottom-nav').click(function (e) {
  e.preventDefault();
  $(`#myTab a[href="#${e.target.href.split('#')[1]}"]`).tab('show');
});
</script>
{% endblock %}